class SpinnerDemo extends React.Component {
  constructor (props) {
    super(props)
    this.state = { visible: false }
    this.clickHandler = this.showSpinner.bind(this)
  }

  showSpinner () {
    this.setState({ visible: true })
    setTimeout(() => this.setState({ visible: false }), 5000)
  }

  render () {
    return (
      <AtomSpinner
        ref='atomSpinnerDemo'
        imageUrl='https://loading.io/spinners/bricks/index.block-rotate-loading-gif.svg'
        visible={this.state.visible}>
        <div style={{ height: 500, width: 500, backgroundColor: '#ccfc09ff' }}>
          <p>Click the button to show the spinner for five seconds</p>
          <button onClick={this.clickHandler}>
            Click me if you dare!
          </button>
        </div>
      </AtomSpinner>
    )
  }
}

return (
  <SpinnerDemo />
)
